<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time on New Keyboard: "
            />
        <TextView
            android:id="@+id/timeNewKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".. seconds"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time on Default Keyboard: "
            />
        <TextView
            android:id="@+id/timeOldKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".. seconds"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong count on New Keyboard: "
            />
        <TextView
            android:id="@+id/wrongNewKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong count on Default Keyboard: "
            />
        <TextView
            android:id="@+id/wrongDefaultKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy: "
            />
        <TextView
            android:id="@+id/accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".."
            />
    </LinearLayout>

</LinearLayout>